{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "bundler",
        "module": "ESNext",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": false,
        "outDir": "dist",
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@client/*": ["./src/client/*"],
            "@services/*": ["./src/services/*"],
            "@schema/*": ["./src/types/*"],
            "@utils/*": ["./src/utils/*"]
        },
        "declarationMap": true,
        "rootDir": "./src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}